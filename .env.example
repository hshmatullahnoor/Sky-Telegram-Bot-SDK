# Database Driver: mysql | sqlite
DB_DRIVER=sqlite

# MySQL Settings
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=sky_bot
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# SQLite Settings (used when DB_DRIVER=sqlite)
DB_PATH=storage/database.sqlite

# ── Telegram Bot ────────────────────────────────
TELEGRAM_BOT_TOKEN=
TELEGRAM_DOMAIN=
TELEGRAM_WEBHOOK_SECRET=

# Admin / Owner
TELEGRAM_ADMIN_ID=
TELEGRAM_LOG_CHANNEL=

# API Settings
TELEGRAM_API_URL=https://api.telegram.org
TELEGRAM_ASYNC_REQUESTS=false
TELEGRAM_HTTP_TIMEOUT=30
TELEGRAM_CONNECT_TIMEOUT=10

# Proxy (leave empty to disable)
TELEGRAM_PROXY=

# ── Logging ─────────────────────────────────────
LOG_CHANNEL=file
LOG_LEVEL=debug
LOG_PATH=storage/logs
LOG_FILE=app.log
LOG_MAX_FILES=7
LOG_DATE_FORMAT=Y-m-d H:i:s
